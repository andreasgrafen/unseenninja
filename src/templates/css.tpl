:root {

%CSS%

  --primary: var(--grape); --primary-tint: var(--grape-tint); --primary-shade: var(--grape-shade); --primary--gradient: linear-gradient(120deg, var(--primary-tint), var(--primary-shade));
  --secondary: var(--raspberry); --secondary-tint: var(--raspberry-tint); --secondary-shade: var(--raspberry-shade); --secondary--gradient: linear-gradient(120deg, var(--secondary-tint), var(--secondary-shade));
  --tertiary: var(--lemon); --tertiary-tint: var(--lemon-tint); --tertiary-shade: var(--lemon-shade); --tertiary--gradient: linear-gradient(120deg, var(--tertiary-tint), var(--tertiary-shade));

  --lemonade-gradient: linear-gradient(120deg, var(--lemon), var(--peach) 40%, var(--raspberry));

}