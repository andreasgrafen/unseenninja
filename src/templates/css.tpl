:root {

%CSS%

  --primary: var(--grape); --primary-tint: var(--grape-tint); --primary-shade: var(--grape-shade);
  --secondary: var(--raspberry); --secondary-tint: var(--raspberry-tint); --secondary-shade: var(--raspberry-shade);
  --tertiary: var(--lemon); --tertiary-tint: var(--lemon-tint); --tertiary-shade: var(--lemon-shade);

  --lemonade: linear-gradient(120deg, var(--lemon), var(--peach) 40%, var(--raspberry));

}